        modalDate.textContent = dateStr;

        // Build modal content
        const content = `
          <div style="padding: 20px;">
            <h3 style="color: var(--accent-cyan); margin-bottom: 15px;">Classes</h3>
            <p style="color: rgba(255,255,255,0.7);">No classes scheduled for this date</p>

            <h3 style="color: var(--accent-cyan); margin: 30px 0 15px;">Payments</h3>
            <p style="color: rgba(255,255,255,0.7);">No payments recorded</p>

            <h3 style="color: var(--accent-cyan); margin: 30px 0 15px;">Absences</h3>
            <p style="color: rgba(255,255,255,0.7);">No absences</p>
          </div>
        `;

        modalBody.innerHTML = content;
        modal.classList.add('active');
      }

      function closeDayModal() {
        document.getElementById('dayModal').classList.remove('active');
      }

      // ============================================================
      // ÔøΩ FILTER FUNCTIONS
      // ============================================================

      let activeStatusFilters = new Set();
      let searchQuery = '';

      function toggleStatusDropdown(event) {
        event.stopPropagation();
        const dropdown = document.getElementById('statusFilterDropdown');
        const button = document.getElementById('statusFilterBtn');
        const rect = button.getBoundingClientRect();
        
        const isVisible = dropdown.style.opacity === '1';
        
        if (isVisible) {
          dropdown.style.opacity = '0';
          dropdown.style.visibility = 'hidden';
          dropdown.style.pointerEvents = 'none';
        } else {
          dropdown.style.left = rect.left + 'px';
          dropdown.style.top = (rect.bottom + 8) + 'px';
          dropdown.style.opacity = '1';
          dropdown.style.visibility = 'visible';
          dropdown.style.pointerEvents = 'auto';
        }
      }

      function updateStatusFilter() {
        const checkboxes = document.querySelectorAll('#statusFilterDropdown input[type="checkbox"]');
        activeStatusFilters.clear();
        
        checkboxes.forEach(checkbox => {
          if (checkbox.checked) {
            activeStatusFilters.add(checkbox.value);
          }
        });

        // Update button label
        const label = document.getElementById('statusFilterLabel');
        if (activeStatusFilters.size === 0) {
          label.textContent = 'All Statuses';
        } else if (activeStatusFilters.size === 1) {
          const status = Array.from(activeStatusFilters)[0];
          const statusLabels = {
            paid: '‚úÖ Paid',
            unpaid: '‚ùå Unpaid',
            credit: 'üí≥ Credit',
            absent: 'üö´ Absent',
            canceled: '‚≠ï Canceled',
            partial: '‚ö†Ô∏è Partial'
          };
          label.textContent = statusLabels[status] || status;
        } else {
          label.textContent = `${activeStatusFilters.size} Statuses`;
        }

        renderCalendar();
      }

      // Close dropdown when clicking outside
      document.addEventListener('click', (e) => {
        const dropdown = document.getElementById('statusFilterDropdown');
        const button = document.getElementById('statusFilterBtn');
        if (dropdown && button && !dropdown.contains(e.target) && !button.contains(e.target)) {
          dropdown.style.opacity = '0';
          dropdown.style.visibility = 'hidden';
          dropdown.style.pointerEvents = 'none';
        }
      });

      // Student search handler
      function handleStudentSearch() {
        searchQuery = document.getElementById('studentSearchInput').value.toLowerCase();
        renderCalendar();
      }

      // ============================================================
      // ÔøΩüé¨ EVENT LISTENERS
      // ============================================================

      function attachEventListeners() {
        // Navigation
        document.getElementById('prevMonth').addEventListener('click', () => {
          currentDate.setMonth(currentDate.getMonth() - 1);
          renderCalendar();
        });

        document.getElementById('nextMonth').addEventListener('click', () => {
          currentDate.setMonth(currentDate.getMonth() + 1);
          renderCalendar();
        });

        document.getElementById('todayBtn').addEventListener('click', () => {
          currentDate = new Date();
          renderCalendar();
        });

        document.getElementById('refreshBtn').addEventListener('click', async () => {
          const btn = document.getElementById('refreshBtn');
          btn.classList.add('loading');
          await loadAllData();
          renderCalendar();
          setTimeout(() => btn.classList.remove('loading'), 500);
        });

        // Student search
        document.getElementById('studentSearchInput').addEventListener('input', handleStudentSearch);

        // Modal close
        document.getElementById('closeModal').addEventListener('click', closeDayModal);
        document.getElementById('dayModal').addEventListener('click', (e) => {
          if (e.target.id === 'dayModal') {
            closeDayModal();
          }
        });
      }

      // ============================================================
      // ÔøΩ STUDENT MODAL FUNCTIONS
      // ============================================================

      let currentStudentData = null;

      async function editBalance() {
        if (!currentStudentData) return;
        
        const newBalance = prompt(`Edit balance for ${currentStudentData.studentName}\n\nCurrent balance: ${formatCurrency(currentStudentData.balance)} $\n\nEnter new balance:`, currentStudentData.balance);
        
        if (newBalance === null) return; // User canceled
        
        const balanceNum = parseFloat(newBalance);
        if (isNaN(balanceNum)) {
          alert('‚ùå Invalid number. Please enter a valid amount.');
          return;
        }
        
        try {
          // Update in database
          const { error } = await supabaseClient
            .from('students')
            .update({ balance: balanceNum })
            .eq('id', currentStudentData.studentId);
          
          if (error) throw error;
          
          // Update UI
          currentStudentData.balance = balanceNum;
          document.getElementById('studentBalance').textContent = formatCurrency(balanceNum) + ' $';
          
          // Reload data to update calendar
          await loadStudents();
          renderCalendar();
          
          alert('‚úÖ Balance updated successfully!');
        } catch (error) {
          console.error('‚ùå Error updating balance:', error);
          alert('‚ùå Failed to update balance. Please try again.');
        }
      }

      async function sendEmailReminder() {
        if (!currentStudentData) return;
        alert(`üìß Email reminder feature\n\nSending payment reminder to ${currentStudentData.studentName}\nfor class on ${currentStudentData.classDate}\n\n(Feature coming soon...)`);
      }

      async function markAsAbsent() {
        if (!currentStudentData) return;
        
        const confirm = window.confirm(`Mark ${currentStudentData.studentName} as absent for ${currentStudentData.classDate}?`);
        if (!confirm) return;
        
        try {
          // Check if absence already exists
          const { data: existing } = await supabaseClient
            .from('student_absences')
            .select('id')
            .eq('student_id', currentStudentData.studentId)
            .eq('class_date', currentStudentData.classDate)
            .single();
          
          if (existing) {
            alert('‚ö†Ô∏è This student is already marked absent for this date.');
            return;
          }
          
          // Insert absence record
          const { error } = await supabaseClient
            .from('student_absences')
            .insert({
              student_id: currentStudentData.studentId,
              class_date: currentStudentData.classDate,
              created_at: new Date().toISOString()
            });
          
          if (error) throw error;
          
          // Reload data
          await loadAbsences();
          renderCalendar();
          closeStudentModal();
          
          alert('‚úÖ Student marked as absent!');
        } catch (error) {
          console.error('‚ùå Error marking absent:', error);
          alert('‚ùå Failed to mark absence. Please try again.');
        }
      }

      async function addCredit() {
        if (!currentStudentData) return;
        
        const creditAmount = prompt(`Add credit for ${currentStudentData.studentName}\n\nEnter credit amount:`, currentStudentData.price);
        if (creditAmount === null) return;
        
        const amount = parseFloat(creditAmount);
        if (isNaN(amount) || amount <= 0) {
          alert('‚ùå Invalid amount. Please enter a positive number.');
          return;
        }
        
        try {
          // Add credit payment
          const { error } = await supabaseClient
            .from('credit_payments')
            .insert({
              student_id: currentStudentData.studentId,
              class_date: currentStudentData.classDate,
              amount: amount,
              applied_class_date: null,
              created_at: new Date().toISOString()
            });
          
          if (error) throw error;
          
          // Update student balance
          const newBalance = currentStudentData.balance + amount;
          await supabaseClient
            .from('students')
            .update({ balance: newBalance })
            .eq('id', currentStudentData.studentId);
          
          // Reload data
          await loadCreditPayments();
          await loadStudents();
          renderCalendar();
          
          currentStudentData.balance = newBalance;
          document.getElementById('studentBalance').textContent = formatCurrency(newBalance) + ' $';
          
          alert(`‚úÖ Credit of ${formatCurrency(amount)} $ added!\nNew balance: ${formatCurrency(newBalance)} $`);
        } catch (error) {
          console.error('‚ùå Error adding credit:', error);
          alert('‚ùå Failed to add credit. Please try again.');
        }
      }

      // Close student modal when clicking outside
      document.addEventListener('DOMContentLoaded', () => {
        document.getElementById('studentModal')?.addEventListener('click', (e) => {
          if (e.target.id === 'studentModal') {
            closeStudentModal();
          }
        });
      });

      // ============================================================
      // ÔøΩüöÄ INITIALIZATION
      // ============================================================

      async function init() {
        console.log('üöÄ Initializing Calendar-New...');

        // Check admin auth
        const hasAccess = await requireAdminSession();
        if (!hasAccess) return;

        // Load all data
        await loadAllData();

        // Render calendar
        renderCalendar();

        // Attach event listeners
        attachEventListeners();

        console.log('‚úÖ Calendar-New initialized successfully');
      }

      // Start when DOM is ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
      } else {
        init();
      }
    </script>
  </body>
</html>
